generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "file:./dev.db"

}

// MODELS
model Clock {
  id        Int       @id @default(autoincrement()) // ID unique
  name      String 
  room      String
  status    String    @default("OK") // OK, ERROR, OFF
  timeShift Int       @default(0) // DÃ©calage en minute pour avancer l'heure
  createdAt DateTime  @default(now())
}
