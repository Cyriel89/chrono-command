// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url = "file:./dev.db"

}

// MODELS
model Clock {
  id            Int       @id @default(autoincrement()) // ID unique
  name          String 
  room          String
  status        String    @default("OK") // OK, ERROR, OFF
  timeShift     Int       @default(0) // Décalage en heures pour avancer l'heure
  createdAt     DateTime  @default(now())
  manualOffset  Int       @default(0) // Décalage en heures ajouté par l'utilisateur
  alarmInterval Int       @default(60) // Interval en minute pour faire sonner l'alarme
}
